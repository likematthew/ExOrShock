<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="burle.ml.exorshock.MainActivity" android:background="#2C2C2C">
    <ListView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/listDevices"
            android:background="#A5D6A7"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/btnShow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp" android:layout_marginRight="8dp" android:layout_marginEnd="8dp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnStart"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:text="@string/start"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:background="#90CAF9" style="@style/Widget.AppCompat.Button"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/txtSeconds"
            android:visibility="visible" tools:visibility="visible" app:layout_constraintHorizontal_bias="0.498"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/txtSeconds"
            android:visibility="visible"
            android:autofillHints=""
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="@string/seconds" tools:visibility="visible" tools:targetApi="o"
            android:textColor="#FFFFFF" android:textColorHint="#FFFFFF" android:textColorHighlight="#90CAF9"
            android:textColorLink="#90CAF9"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnShow"
            android:text="@string/showConnectedDevices"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:background="#A5D6A7" style="@style/Widget.AppCompat.Button"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:visibility="visible" tools:visibility="visible"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/btnStart"
    />
</android.support.constraint.ConstraintLayout>